<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pill_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_pill_height"
    android:layout_margin="10dp"
    android:gravity="center_vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/list_item_avatar_size"
        android:layout_height="@dimen/list_item_avatar_size"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/list_icon_left_padding"
        android:paddingEnd="@dimen/list_icon_left_padding"
        android:paddingStart="@dimen/list_icon_left_padding" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:layout_toEndOf="@+id/avatar"
        android:gravity="start|center"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/list_text_right_padding"
        android:textSize="@dimen/font_size_big" />


</RelativeLayout>