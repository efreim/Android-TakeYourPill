<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/alarm_list_item_active_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/inner_alarm_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alarm_time_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_weight="0.4"
            android:textColor="@color/alarm_list_item_text"
            android:singleLine="false"
            android:gravity="top"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/alarm_type_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/alarm_list_item_text"
            android:layout_weight="0.5"
            android:paddingStart="3dp"
            android:gravity="top"
            android:textAppearance="?attr/textAppearanceListItem" />

        <ImageButton
            android:id="@+id/image_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0.1"
            android:background="@android:drawable/ic_popup_reminder" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandable_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/expandable_item_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/alarm_list_item_text"
            android:gravity="start"
            android:singleLine="false"
            android:layout_weight="0.5" />

        <HorizontalScrollView
            android:id="@+id/pill_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="3dp"
            android:clickable="false">

            <GridLayout
                android:id="@+id/grid_in_pill_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="horizontal">

            </GridLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>