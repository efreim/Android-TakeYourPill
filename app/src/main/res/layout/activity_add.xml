<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPill"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways|snap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarPill"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pill_activity_item_margin"
            android:layout_marginEnd="@dimen/pill_activity_item_margin"
            android:layout_marginStart="@dimen/pill_activity_item_margin"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="@dimen/font_size"
            android:text="Add pill by scanning barcode of your medicine"
            android:textAlignment="center" />

        <Button
            android:id="@+id/scan_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/pill_activity_item_margin"
            android:layout_weight="0.2"
            android:text="Scan Barcode" />

        <EditText
            android:id="@+id/barcode_number_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pill_activity_item_margin"
            android:layout_marginEnd="@dimen/pill_activity_item_margin"
            android:layout_marginStart="@dimen/pill_activity_item_margin"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="@dimen/font_size"
            android:hint="Click here to insert your barcode manually"
            android:textAlignment="center"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/search_by_barcode_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/pill_activity_item_margin"
            android:layout_weight="0.2"
            android:text="Find pill" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pill_activity_item_margin"
            android:layout_marginEnd="@dimen/pill_activity_item_margin"
            android:layout_marginStart="@dimen/pill_activity_item_margin"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="@dimen/font_size"
            android:text="Add pill manually"
            android:textAlignment="center" />

        <Button
            android:id="@+id/add_manually_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/pill_activity_item_margin"
            android:layout_weight="0.2"
            android:text="Add pill" />
    </LinearLayout>
</RelativeLayout>