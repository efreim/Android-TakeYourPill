<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="10"
        android:inputType="numberDecimal"
        android:key="snooze"
        android:summary="@string/edit_text_summary"
        android:title="@string/edit_text_title" />
    <RingtonePreference
        android:defaultValue="content://settings/system/alarm_alert"
        android:key="ringtone"
        android:summary="@string/ringtone_summary"
        android:title="@string/ringtone_title" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="vibration"
        android:summary="@string/checkbox_summary"
        android:title="@string/checkbox_title" />
    <pl.balazinski.jakub.takeyourpill.presentation.views.PercentagePickerPreference
        android:inputType="numberDecimal"
        android:key="percentage"
        android:summary="@string/percentage_summary"
        android:title="@string/percentage_title" />
</PreferenceScreen>